import "example.enso";

test "Mocked Positive Flow" {
    mock analyze => Sentiment { mood: "Positive", score: 99 };

    let result = analyze("I hate this");

    match result {
        Ok(probabilistic) => {
            assert probabilistic.value.score == 99;
            assert probabilistic.value.mood == "Positive";
        },
        Err(error) => {
            assert false;
        }
    }
}

test "Mocked Negative Flow" {
    mock analyze => Sentiment { mood: "Negative", score: 20 };

    let result = analyze("This is terrible");

    match result {
        Ok(probabilistic) => {
            assert probabilistic.value.score == 20;
            assert probabilistic.value.mood == "Negative";
        },
        Err(error) => {
            assert false;
        }
    }
}
