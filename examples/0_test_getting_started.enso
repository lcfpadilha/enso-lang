// 
// This example demonstrates a simple AI function test in EnsÅ and how to mock AI responses.
//

// Import struct and ai fn from 0_getting_started.enso
import "0_getting_started.enso";

test "Mocked Positive Flow" {
    // Mock the analyze function to return a predefined Sentiment.
    mock analyze => Sentiment { mood: "Positive", score: 99 };

    let result = analyze("I hate this");

    // Match the result and assert expected values.
    match result {
        Ok(probabilistic) => {
            assert probabilistic.value.score == 99;
            assert probabilistic.value.mood == "Positive";
        },
        Err(error) => {
            assert false;
        }
    }
}

test "Mocked Negative Flow" {
    // Mock the analyze function to return a predefined Sentiment.
    mock analyze => Sentiment { mood: "Negative", score: 20 };

    let result = analyze("This is terrible");

    // Match the result and assert expected values.
    match result {
        Ok(probabilistic) => {
            assert probabilistic.value.score == 20;
            assert probabilistic.value.mood == "Negative";
        },
        Err(error) => {
            assert false;
        }
    }
}
